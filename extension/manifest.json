{
  "manifest_version": 3,
  "name": "YouTube Comment Sentiment Analyzer",
  "version": "1.0.0",
  "description": "Analyzes sentiment of YouTube video comments using a custom AI model.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://zoro828-yt-sentiment-analysis.hf.space/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons.png",
      "48": "icons.png",
      "128": "icons.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}